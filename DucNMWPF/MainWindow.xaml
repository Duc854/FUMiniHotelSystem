<Window x:Class="DucNMWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Nhập" Height="300" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#F3F3F3">
        <Border Background="White" CornerRadius="10" Padding="20" Width="300" Height="200" 
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Đăng nhập" FontSize="18" FontWeight="Bold" Margin="0 0 0 10" TextAlignment="Center"/>
                <TextBlock Text="Tài Khoản" FontSize="9" FontWeight="Bold" Margin="0 10 0 5" TextAlignment="Left"/>
                <TextBox Name="txtUsername">
                    <TextBox.ToolTip>Tài khoản</TextBox.ToolTip>
                </TextBox>
                <TextBlock Text="Mật Khẩu" FontSize="9" FontWeight="Bold" Margin="0 10 0 5" TextAlignment="Left"/>
                <PasswordBox Name="txtPassword" Margin="0 0 0 5">
                    <PasswordBox.ToolTip>Mật khẩu</PasswordBox.ToolTip>
                </PasswordBox>
                <Button Content="Đăng nhập" Background="#0078D7" Foreground="White" Height="35" Click="Login_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
